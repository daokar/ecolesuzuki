<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title> DK Conseil - {% block title %} {% endblock %}</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('bundles/dkschoolmanager/css/test.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" >
    </head>
    <body>

        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('homepage') }}">Home</a></li>
                                <li><a href="{{ path('personne') }}">Personne</a></li>
                                <li><a href="{{ path('adresse') }}">Adresse</a></li>
                                <li><a href="{{ path('inscription') }}">Parenté</a></li>
                                <li><a href="{{ path('inscription') }}">Inscription</a></li>
                                <li><a href="{{ path('discipline') }}">Discipline</a></li>
                                <li><a href="{{ path('paiement') }}">Paiement</a></li>
                                <li><a href="{{ path('planning') }}">Planning</a></li>
                                <li><a href="{{ path('presence') }}">Presence</a></li>
                                <li><a href="{{ path('cours') }}">Cours</a></li>
                                <li><a href="{{ path('tarif') }}">Tarif</a></li>

                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <h2>{% block blog_title %}<a href="#">Ecole d'Art Musical</a>{% endblock %}</h2>
                    <h3>{% block blog_tagline %}<a href="#">l'enseignement par le plaisir</a>{% endblock %}</h3>
                </hgroup>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    Hello, {{ app.user.username }} <br>
                    Nous sommes le {{ "now"|date("d/m/Y") }}, il est {{ "now"|date("H:i:s") }}  <br>
                    <a href="{{ path('fos_user_change_password') }}">Modifier mot de passe /_/ </a>
                    <a href="{{ path('fos_user_security_logout') }}"> Déconnexion</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">Veuillez vous connecter</a>

                {% endif %}
            </header>





            <section class="main-col">
            {% block body %}{% endblock %}
        </section>

        <div id="footer">
            {% block footer %}
                Nous sommes <a href="www.dkconseil.fr">A votre service</a>
            {% endblock %}
        </div>
    </section>

{% block javascripts %}{% endblock %}
</body>
</html>
