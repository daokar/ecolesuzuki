{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tarif</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Typetarif</th>
                <td>{{ entity.typetarif }}</td>
            </tr>
            <tr>
                <th>Montanttarif</th>
                <td>{{ entity.montanttarif }}</td>
            </tr>
            <tr>
                <th>Datetarif</th>
                <td>{% if entity.datetarif %}{{ entity.datetarif|date('d/m/Y') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tarif') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tarif_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
