{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Inscription list</h1>
    <a href="show.html.twig"></a>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Eleve</th>
                <th>Dateinscription</th>
                <th>Modalitepaiement</th>
                <th>Dateabandon</th>
                <th>Motifabandon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('inscription_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idpersonne }}</td>
                <td>{% if entity.dateinscription %}{{ entity.dateinscription|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.modalitepaiement }}</td>
                <td>{% if entity.dateabandon %}{{ entity.dateabandon|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.motifabandon }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('inscription_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('inscription_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('inscription_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
